#!/bin/env bash

cd "$(dirname "$0")"

pwd

# CREATE CAN DEVICE
modprobe can
modprobe can-raw
modprobe slcan


touch ./LOCK
while true; do
	FILEA=./LOCK
	if test -f "$FILEA"; then
		echo "INIT USBTIN"
		ifconfig can0 down  || true
		slcan_attach -f -n can0 -s5 -o /dev/ttyCAN
		slcand ttyCAN can0
		ifconfig can0 up


    	echo "STARTING CAN2REST"
		./can2rest
		sleep 10
	else
	    	exit 1
	fi	
done